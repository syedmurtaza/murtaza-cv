<div class="min-h-screen bg-gray-800 p-8" id="recentwork">
    <div class="max-w-6xl mx-auto">
        <h2 class="section-title text-3xl font-bold mb-12 text-white">Recent Work</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{#each this.portfolio as |project|}}

            <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-all duration-300 hover:scale-105 
            {{if (eq this.activeProject project.id) 'ring-2 ring-blue-500'}}" {{on "mouseenter" (fn
                this.setActiveProject project.id)}} {{on "mouseleave" this.clearActiveProject}}>
                <div class="relative">
                    <img src={{project.imageUrl}} alt={{project.title}} class="w-full h-32 object-contain" width="320"
                        height="180" />
                    <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-60 transition-opacity duration-300 
                      flex items-center justify-center opacity-0 hover:opacity-100">
                        <div class="flex gap-4">
                            <a href={{project.demoUrl}} class="text-white hover:text-blue-400 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">{{project.title}}</h3>
                    <p class="text-gray-600 mb-4">{{project.description}}</p>

                    <div class="flex flex-wrap gap-2">
                        {{#each project.tags as |tag|}}
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                            {{tag}}
                        </span>
                        {{else}}
                        <p class="empty">No content</p>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{else}}
            <p class="empty">No content</p>
            {{/each}}
        </div>
    </div>
</div>