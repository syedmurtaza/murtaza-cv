<div class="py-20 bg-gray-900 text-white relative bg-background" id="experience">

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <h2 class="section-title text-3xl font-bold mb-12 text-white">Work Experience</h2>

        <div class="relative">
            <div class="absolute left-1/2 border-l-2 border-blue-900 h-full"></div>
            <div class="space-y-12">
                {{#each this.experience as |job|}}
                <div class="flex items-start relative z-10">
                    <div class="flex-shrink-0 mr-4">
                        <span class="text-xl font-bold text-white-900">{{job.year}}</span>
                    </div>
                    <div
                        class="bg-gray-800 p-6 rounded-lg shadow-lg transform transition-transform duration-500 hover:scale-105 hover:opacity-75 hover:shadow-lg hover:shadow-blue-500/50 w-full z-0">
                        {{!-- class="bg-gray-800 p-6 rounded-lg shadow-lg transform transition-transform duration-500
                        hover:scale-105 hover:opacity-75 hover:shadow-lg hover:shadow-blue-500/50 w-full z-0"> --}}
                        <div class="mb-6">
                            <h3 class="text-2xl font-bold">{{job.role}}</h3>
                            <p class="text-xl text-gray-400">{{job.company}}</p>
                        </div>
                        <ul class="space-y-3">
                            {{#each job.achievements as |achievement|}}
                            <li class="flex items-start">
                                <svg class="w-5 h-5 text-blue-900 mr-2 mt-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path
                                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                {{achievement}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}
                <div class="mt-6 text-center icon-note">
                    <i class="fas fa-pencil-alt mr-2"></i><a href="#linkedin"> Please visit my linked-in profile to view
                        the complete work history.</a>
                </div>
            </div>
        </div>
    </div>
</div>